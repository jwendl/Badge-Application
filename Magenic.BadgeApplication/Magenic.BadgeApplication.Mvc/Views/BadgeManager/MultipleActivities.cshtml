@using Magenic.BadgeApplication.Resources
@using Magenic.BadgeApplication.Models
@model MultipleActivityViewModel

<div class="container">
    <div class="row">
        @Html.Partial("_AdminNavbar")
    </div>
    <div class="row">
        <div class="col-md-12 grayBox">
            <div class="row">
                <div class="col-md-12">
                    <h2>@ApplicationResources.MultipleActivityEntryHeader</h2>
                </div>
            </div>
            @using (Html.BeginForm("AddMultipleActivities", "BadgeManager", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.EditorFor(mavm => mavm)
            }
        </div>
    </div>
    <div class="row">
        &nbsp;
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/badgeManager")
}